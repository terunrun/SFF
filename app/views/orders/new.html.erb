<% provide(:title, " | 商品購入") %>
<div class="contents-wrapper">
  <div class="container">
    <div class="row">
      <h2 class="text-center"><%= t("view.product") %>購入</h2>
      <div class="col-md-offset-4 col-md-4">
        <%= form_for @order do |f| %>
          <% if !f.object.errors.blank? %>
            <% f.object.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>

          <%= hidden_field_tag :user_id, current_user.id %>
          <%= hidden_field_tag :product_id, @product.id %>

          <div class="form-group">
            <p>商品名：<%= @product.name %></p>
            <p>商品説明：<%= @product.description %></p>
            <p>価格：<%= @product.price %></p>
            <% if @product.image? %>
              <%= image_tag @product.image.url %>
            <% else %>
              <%= image_tag "no_image.jpg", width:"200px", height:"200px", style:" border: 1px solid lightgray"%>
            <% end %>
          </div>

          <!-- <div class="form-group">
            <%= f.submit "購入", class: "form-control btn", id: "payment" %>
          </div> -->
          <div style="text-align:center">
            <script type="text/javascript"
              src="https://checkout.pay.jp"
              class="payjp-button"
              data-key="pk_test_27a29b5b4e1e52be694ce6e4">
            </script>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
