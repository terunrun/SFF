<% provide(:title, " | ユーザー一覧") %>
<div class="contents-wrapper">
  <div class="container">
    <div class="row">
      <h1 class="text-center"><%= t('view.user') %>一覧</h1>
    </div>
    <% if !@users.blank? %>
      <div class="row">
        <% @users.each do |user| %>
          <div class="user-area">
            <div class="">
              <%= link_to "#{user.name}", user_path(user.id), class: "" %>
            </div>
          </div>
        <% end %>
        </div>
      <div class="row">
        <div class="paginate-area">
          <%= paginate @users %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <p class="text-center">ユーザーがいません</p>
      <% end %>
    </div>
  </div>
</div>
