<% provide(:title, " | 商品情報変更") %>
<div class="contents-wrapper">
  <div class="container">
    <div class="row">
        <h2 class="text-center">商品情報変更</h2>
      <div class="col-md-offset-4 col-md-4">
        <%= form_for @product do |f| %>
          <% if !f.object.errors.blank? %>
            <% f.object.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :category %>
            <%= f.collection_select :category_id, Category.all, :id, :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, min: 1, max:999999, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :stock %>
            <%= f.number_field :stock, min: 1, max: 99, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :image %>
          <% if @product.image? %>
            <%= image_tag @product.image.url %>
          <% else %>
            no image
          <% end %>
          <%= f.file_field :image %>
          </div>

          <%= f.submit "変更", class: "form-control btn" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
